{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    "rootDir": "..",
    "outDir": "../dist/server",
    "baseUrl": "..",
    "paths": {
      "@shared/*": ["shared/*"]
    },

    "types": ["node"]
  },
  "include": [
  "./**/*.ts",
  "../shared/**/*.ts"
],
  "exclude": [
    "node_modules",
    "dist",
    "client"
  ]
}
