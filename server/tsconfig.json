{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist/server",
    "rootDir": "./",
    "baseUrl": "../",
    "paths": {
      "@shared/*": ["shared/*"]
    },
    "types": ["node", "express"]
  },
    "include": ["**/*.ts", "../shared/**/*.ts", "../vite.config.ts"],
    "exclude": ["node_modules", "dist", "../client"]
}
